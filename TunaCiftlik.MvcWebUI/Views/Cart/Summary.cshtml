@model TunaCiftlik.MvcWebUI.Models.Cart

<style>
    #cart {
        color: white;
    }
</style>
<ul class="navbar-nav my-2 my-lg-0">
    <li id="cart" class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Cart" ? "active" : "")">
        <a class="nav-link card-title" href="/Cart">
            <i class="fas fa-shopping-bag" aria-hidden="true">
                (@Model.CartLines.Count)
            </i>
        </a>
        
    </li>
</ul>