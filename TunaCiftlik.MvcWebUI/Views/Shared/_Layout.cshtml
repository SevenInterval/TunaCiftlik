<body>
    <a class="navbar-brand logoSpecial" href="/">
        <img src="~/Upload/logo.png" class="responsiveImages" style="width: 22rem;" />
    </a>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                        <a class="nav-link card-title" href="/">Anasayfa <i class="fas fa-home" aria-hidden="true"></i> <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "List" ? "active" : "")">
                        <a class="nav-link card-title" href="/Home/List">Ürünler <i class="fas fa-leaf" aria-hidden="true"></i></a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")">
                        <a class="nav-link card-title" href="/Home/About">Hakkımızda <i class="fas fa-info-circle" aria-hidden="true"></i></a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")">
                        <a class="nav-link card-title" href="/Home/Contact">İletişim <i class="fas fa-phone" aria-hidden="true"></i></a>
                    </li>
                </ul>
                @Html.Action("Summary", "Cart")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>


    @RenderBody()

   
